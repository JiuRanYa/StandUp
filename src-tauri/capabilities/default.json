{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:window:allow-hide",
    "shell:allow-open",
    "core:window:default",
    "core:window:allow-start-dragging",
    "fs:default",
    "fs:write-files",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "$CONFIG" }, { "path": "$CONFIG/**" }]
    }
  ]
}
